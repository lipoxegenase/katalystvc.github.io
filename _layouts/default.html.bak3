<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>{{ page.title }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <link rel="stylesheet" href="{{ '/assets/style.css' | relative_url }}">
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-white text-gray-900">

  <!-- Navbar -->
  <header class="bg-white shadow">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center py-4">
        <a href="/" class="text-xl font-bold">KatalystVC</a>
        <button id="menu-toggle" class="sm:hidden text-gray-600 focus:outline-none">
          <svg class="h-6 w-6 fill-current" viewBox="0 0 24 24">
            <path d="M4 5h16M4 12h16M4 19h16"/>
          </svg>
        </button>
      </div>
      <nav id="menu" class="hidden sm:flex flex-col sm:flex-row sm:space-x-6 pb-4 sm:pb-0 text-sm">
        <a href="/about.html" class="hover:text-blue-500">About</a>
        <a href="/advisory.html" class="hover:text-blue-500">Advisory</a>
        <a href="/contact.html" class="hover:text-blue-500">Contact</a>
        <a href="/education.html" class="hover:text-blue-500">Education</a>
        <a href="/equity.html" class="hover:text-blue-500">Equity</a>
        <a href="/grants.html" class="hover:text-blue-500">Grants</a>
        <a href="/lpcapital.html" class="hover:text-blue-500">LP Capital</a>
        <a href="/microloans.html" class="hover:text-blue-500">Microloans</a>
        <a href="/origination.html" class="hover:text-blue-500">Origination</a>
        <a href="/sponsorships.html" class="hover:text-blue-500">Sponsorships</a>
        <a href="/resources.html" class="hover:text-blue-500">Resources</a>
      </nav>
    </div>
  </header>

  <!-- Page Content -->
  <main class="max-w-4xl mx-auto px-4 py-16">
    {{ content }}
  </main>

  <!-- Footer -->
  <footer class="text-center text-sm text-gray-600 py-6 border-t">
    © 2025 KatalystVC — <a href="mailto:contact@katalystvc.com" class="text-blue-500">contact@katalystvc.com</a>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const toggle = document.getElementById('menu-toggle');
      const menu = document.getElementById('menu');
      toggle.addEventListener('click', () => {
        menu.classList.toggle('hidden');
      });
    });
  </script>

</body>
</html>